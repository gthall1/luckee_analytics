<!-- Left side column. contains the logo and sidebar -->
<aside class="main-sidebar">

    <!-- sidebar: style can be found in sidebar.less -->
    <section class="sidebar">

        <!-- Sidebar user panel (optional) -->
        <div class="user-panel">
            <div class="pull-left info">
                <p><%= current_user %></p>
            </div>
        </div>

        <!-- Sidebar Menu -->
        <ul class="sidebar-menu">
            <li class="header">Dashboards</li>
            <li <% if @active == "main"%>class="active"<% end %>><a href="/"><i class="fa fa-link"></i> <span>Main Dash</span></a></li>
            <li class="treeview">
                <a href="#"><i class="fa fa-calendar"></i> <span>Date Views</span> <i class="fa fa-angle-left pull-right"></i></a>
                <ul class="treeview-menu">
                    <li <% if @active == "monthly"%>class="active"<% end %>><a href="/monthly">Monthly</a></li>
                    <li <% if @active == "weekly"%>class="active"<% end %>><a href="/weekly">Weekly</a></li>
                </ul>
            </li>            
            <li><a href="/users"><i class="fa fa-users"></i> <span>Users</span></a></li>
            <li><a href="/games"><i class="fa fa-gamepad"></i> <span>Games</span></a></li>

        </ul><!-- /.sidebar-menu -->
    </section>
    <!-- /.sidebar -->
</aside>
